        <div class="card-body text-center">
            <h4>@Model.RoomNumber </h4>
            <h6>Room Type: <b>@Model.RoomType</b></h6>
            <h5>
                @if (@Model.IsCleaned)
                {
                    <b class="available">Cleaned</b>
                }
                else
                {
                    <b class="unavailable">Dirty</b>
                }
                @if (!@Model.IsOccupied)
                {
                    <b class="available">Free</b>
                }
                else
                {
                    <b class="unavailable">Occupied</b>
                }
                @if (!@Model.IsOutOfService)
                {
                    <b class="available">No problems</b>
                }
                else
                {
                    <b class="unavailable">Out of service</b>
                }
            </h5>

           
