@model HotelManagement.Web.ViewModels.FloorModels.ServiceModels.SingleRoomServiceModel

<style>
    .available
    {
        background-color: lightgreen;
        border-radius: 10% / 50%;
    }
    .unavailable 
    {
        background-color: lightcoral;
        border-radius: 15px;
    
    }
        
</style>

